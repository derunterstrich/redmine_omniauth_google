<%= stylesheet_link_tag 'buttons', :plugin => 'redmine_omniauth_google' %>
<% if Setting.plugin_redmine_omniauth_google[:oauth_authentification] %>
  <%= content_tag :div do %>
    <%= content_tag :div, :class => 'google-login' do %>
      <%= link_to oauth_google_path(:back_url => back_url) do %>
        <%= image_tag('/plugin_assets/redmine_omniauth_google/images/google_login_icon.png', :alt => l(:login_via_google)) %>
        <%= content_tag :span, l(:login_via_google) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>